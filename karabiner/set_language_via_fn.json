{
  "title": "Language Toggler",
  "rules": [
    {
      "description": "Switch to RU",
      "manipulators": [
        {
          "conditions": [
            {
              "input_sources": [
                {
                  "language": "en"
                }
              ],
              "type": "input_source_if"
            }
          ],
          "from": {
            "key_code": "f23"
          },
          "to_if_alone": [
            {
              "select_input_source": {
                "language": "ru"
              }
            }
          ],
          "type": "basic"
        }
      ]
    }, {
      "description": "Switch to EN",
      "manipulators": [
        {
          "conditions": [
            {
              "input_sources": [
                {
                  "language": "ru"
                }
              ],
              "type": "input_source_if"
            }
          ],
          "from": {
            "key_code": "f24"
          },
          "to_if_alone": [
            {
              "select_input_source": {
                "language": "en"
              }
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
